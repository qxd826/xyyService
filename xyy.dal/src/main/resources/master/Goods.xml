<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "com.qxd.birth.dal.dao.GoodsDao">

    <resultMap id = "BaseResultMap" type = "Goods" extends = "COMMON.BASE_RESULT_MAP">
        <result column = "goods_name" property = "goodsName" />
        <result column = "goods_code" property = "goodsCode" />
        <result column = "goods_num" property = "goodsNum" />
    </resultMap>

    <sql id = "BaseColumnList">
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_COLUMN_LIST" />
            goods_name as goodsName,
            goods_code as goodsCode,
            goods_num as goodsNum,
        </trim>
    </sql>

    <sql id = "BaseWhereClause">
        <where>
            <trim prefixOverrides = "and">
                <include refid = "COMMON.BASE_WHERE_CLAUSE" />
                <if test = "goodsName != null">
                    and goods_name = #{goodsName}
                </if>
                <if test = "goodsCode != null">
                    and goods_code = #{goodsCode}
                </if>
                <if test = "goodsNum != null">
                    and goods_num = #{goodsNum}
                </if>
            </trim>
        </where>
    </sql>

    <sql id = "BaseUpdateSet">
        <set>
            <trim suffix="" suffixOverrides=",">
                <include refid = "COMMON.BASE_UPDATE_SET" />
                <if test = "goodsName != null">
                    goods_name = #{goodsName},
                </if>
                <if test = "goodsCode != null">
                    goods_code = #{goodsCode},
                </if>
                <if test = "goodsNum != null">
                    goods_num = #{goodsNum},
                </if>
            </trim>
        </set>
    </sql>

    <!-- 查询总数 -->
    <select id = "selectCount" resultType = "java.lang.Integer">
        select count(id)
        from xyy_goods
        <include refid = "BaseWhereClause" />
    </select>

    <!-- 查询 -->
    <select id = "select" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from xyy_goods
        <include refid = "BaseWhereClause" />
        <include refid = "COMMON.ORDER_BY" />
        <include refid = "COMMON.LIMIT" />
    </select>

    <!-- 根据ID查询 -->
    <select id = "selectById" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from xyy_goods
        where id = #{id} and is_deleted = 'N'
    </select>

    <!-- 根据IDS批量查询 -->
    <select id = "selectByIds" resultMap = "BaseResultMap">
        select
        <include refid = "BaseColumnList" />
        from xyy_goods
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        ) and is_deleted = 'N'
    </select>


    <!-- 根据IDS批量删除 -->
    <update id = "deleteByIds">
        update xyy_goods
        set is_deleted='Y'
        where id in
        (
        <foreach collection = "array" index = "index" item = "tag" separator = ",">
            #{tag}
        </foreach>
        )
    </update>

    <!-- 根据ID删除 -->
    <update id = "deleteById">
        update xyy_goods
        set is_deleted='Y'
        where id=#{id}
    </update>

    <!-- 删除 -->
    <delete id = "delete">
        update xyy_goods
        set is_deleted='Y'
        <include refid = "BaseWhereClause" />
    </delete>

    <!-- 添加   -->
    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id">
        insert into xyy_goods (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_COLUMN" />
            <if test = "goodsName != null">
                goods_name,
            </if>
            <if test = "goodsCode != null">
                goods_code,
            </if>
            <if test = "goodsNum != null">
                goods_num,
            </if>
        </trim>
        )
        values (
        <trim suffix="" suffixOverrides=",">
            <include refid = "COMMON.BASE_INSERT_VALUE" />
            <if test = "goodsName != null">
                #{goodsName},
            </if>
            <if test = "goodsCode != null">
                #{goodsCode},
            </if>
            <if test = "goodsNum != null">
                #{goodsNum},
            </if>
        </trim>
        )
    </insert>

    <!-- 通过ID更新 -->
    <update id = "updateById">
        update xyy_goods
        <include refid = "BaseUpdateSet" />
        where id = #{id}
    </update>

    <insert id="batchInsert" parameterType="java.util.List">
        insert into xyy_goods (
        <trim suffix="" suffixOverrides=",">
            is_deleted,
            creator,
            gmt_modified,
            goods_name,
            goods_code,
            goods_num,
        </trim>
        )
        values

        <foreach collection="list" item="item" index="index" separator=",">
            (
            <trim suffix="" suffixOverrides=",">
                'N',
                <if test="item.gmtCreate != null">
                    #{item.gmtCreate},
                </if>
                <if test="item.gmtCreate == null">
                    now(),
                </if>
                <if test="item.gmtModified != null">
                    #{item.gmtModified},
                </if>
                <if test="item.gmtModified == null">
                    now(),
                </if>
                <if test="item.goodsName != null">
                    #{item.goodsName},
                </if>
                <if test="item.goodsName == null">
                    '',
                </if>
                <if test="item.goodsCode != null">
                    #{item.goodsCode},
                </if>
                <if test="item.goodsCode == null">
                    '',
                </if>
                <if test="item.goodsNum != null">
                    #{item.goodsNum},
                </if>
                <if test="item.goodsNum == null">
                    0 ,
                </if>
            </trim>
            )
        </foreach>
    </insert>

</mapper>
